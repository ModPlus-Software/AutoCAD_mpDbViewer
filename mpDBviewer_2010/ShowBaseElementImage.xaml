<mpc:BaseMetroWindow x:Class="mpDbViewer.ShowBaseElementImage"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mpc="clr-namespace:ModPlusAPI.Windows.Mpc;assembly=ModPlusAPI"
                      ResizeMode="CanResizeWithGrip"
                      KeyDown="ShowBaseElementImage_OnKeyDown" MinWidth="300" MinHeight="300"
                      Width="300" Height="300">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ModPlusAPI;component/Windows/WinResources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Image Name="Img" Stretch="Uniform" Margin="2"
               RenderOptions.BitmapScalingMode="HighQuality"></Image>
    </Grid>
</mpc:BaseMetroWindow>



